name: SenseMarket Bot

on:
  schedule:
    - cron: "0 * * * *"   # every hour
  workflow_dispatch:

jobs:
  run-bot:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.10"
      - name: Install dependencies
        run: pip install requests
      - name: Run bot
        run: python bot.py
      - name: Commit tweet
        run: |
          git config --global user.name "sensemarket-bot"
          git config --global user.email "bot@sensemarket.ai"
          git add tweet.txt
          git commit -m "Auto tweet update" || echo "No changes"
          git push
